<Window x:Class="EmployeeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManager"
        mc:Ignorable="d"
        Width="1080" Height="720" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent">
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Images/window-bg-image.png" Opacity="0.2" />
        </Border.Background>
        <Grid>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel LastChildFill="True" Grid.Row="0" Margin="0 0 0 20">
                    <Image/>
                    <TextBlock Text="Danh sach nhan vien" FontSize="25" Foreground="White" VerticalAlignment="Center"/>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Width="200px" Height="50" Margin="0 0 15 0" Background="LightGray" CornerRadius="25" VerticalAlignment="Center" HorizontalAlignment="Right"></Border>
                        <Border Width="50" Height="50" CornerRadius="25" Background="#fff" />
                    </StackPanel>
                </DockPanel>
                <Border Grid.Row="1" Background="White" Margin="0" CornerRadius="10">
                    <StackPanel Margin="10">
                        <DockPanel Height="100" LastChildFill="True">
                            <ComboBox Text="Role" Width="100" Height="50"></ComboBox>
                            <ComboBox Text="Role" Width="100" Height="50"></ComboBox>
                            <TextBox Width="250" Height="50"></TextBox>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Width="100" Height="50" HorizontalAlignment="Right" Margin="0 0 20 0 " Content="Export"></Button>
                                <Button Width="120" Height="50" HorizontalAlignment="Right" Content="Them nhan vien"></Button>
                            </StackPanel>
                        </DockPanel>
                        <Grid></Grid>
                    </StackPanel>
                </Border>
            </Grid>
            
        </Grid>
    </Border>
   
</Window>
