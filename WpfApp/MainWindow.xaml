<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Caculator" Height="450" Width="350">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Top" Background="Aqua">
            
        </StackPanel>
        <StackPanel Height="80" Margin="0,40,0,0" VerticalAlignment="Top" Background="Gray">
            
        </StackPanel>
        <Grid Margin="0,120,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Width="Auto" Height="Auto" Grid.Row="0" Grid.Column="0">%</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="0" Grid.Column="1">CE</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="0" Grid.Column="2">C</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="0" Grid.Column="3">x</Button>

            <Button Width="Auto" Height="Auto" Grid.Row="1" Grid.Column="0">1/x</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="1" Grid.Column="1">x2</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="1" Grid.Column="2">2Vx</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="1" Grid.Column="3">/</Button>

            <Button Width="Auto" Height="Auto" Grid.Row="2" Grid.Column="0">7</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="2" Grid.Column="1">8</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="2" Grid.Column="2">9</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="2" Grid.Column="3">X</Button>

            <Button Width="Auto" Height="Auto" Grid.Row="3" Grid.Column="0">4</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="3" Grid.Column="1">5</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="3" Grid.Column="2">6</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="3" Grid.Column="3">-</Button>

            <Button Width="Auto" Height="Auto" Grid.Row="4" Grid.Column="0">1</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="4" Grid.Column="1">2</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="4" Grid.Column="2">3</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="4" Grid.Column="3">+</Button>

            <Button Width="Auto" Height="Auto" Grid.Row="5" Grid.Column="0">+</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="5" Grid.Column="1">1</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="5" Grid.Column="2">1</Button>
            <Button Width="Auto" Height="Auto" Grid.Row="5" Grid.Column="3">1</Button>
        </Grid>

    </Grid>
</Window>
